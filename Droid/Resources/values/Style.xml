<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light">
		<item name="actionBarStyle">@style/MainActionBar</item>            
        <item name="actionBarTabStyle">@style/MainActionBarTab</item>
        <item name="homeAsUpIndicator">@mipmap/btn_back_xxhdpi</item>  
		<item name="colorAccent">@color/TabUnChecked</item>                      
	</style>

	<!-- ActionBar styles -->
    <style name="MainActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
		<item name="background">@color/TabUnChecked</item>
	    <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>
    <style name="MainActionBarTab" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@android:color/white</item>
    </style> 
    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

	<!--アプリのTheme-->
    <style name="MainAppTheme" parent="@style/BaseAppTheme">                
    </style>

	<!--TabView Style-->
    <style name="ActionBarTheme"
           parent="@style/MainAppTheme">
        <item name="android:windowEnableSplitTouch">false</item>  
        <item name="android:splitMotionEvents">false</item>  
    </style>
</resources>
